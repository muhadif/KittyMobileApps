<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">

    <ImageView android:layout_width="300dp" android:layout_height="300dp"
               android:id="@+id/iv_kitty" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="32dp"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_description"
              tools:layout_editor_absoluteX="-16dp" app:layout_constraintTop_toBottomOf="@+id/iv_kitty"
              android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>